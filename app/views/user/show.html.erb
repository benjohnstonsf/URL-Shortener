<h1>Welcome, User <%= @user.id%></h1>
<!-- <%= @user.email %> -->
<p>

<br />	
<% if @user == current_user %>
Create new short url: <br />
<%= form_for @url do |f| %>
<div class="field">
    <%= f.text_field :long_url %>
  </div>
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>
</p>
<%end%>


<table class="table table-bordered">
<% @urls.each do |url| %>
<tr><td>
<%= link_to "localhost:3000/urls/#{url.short_url}", ("http://" + url.long_url) %></td><td> <%= url.long_url%></td>
<% if @user == current_user %>
<td><%= url.counter%></td><td>
<%= link_to "edit", edit_url_path(url.id) %></td><td>
<%= link_to "delete", url, method: :delete, confirm: "Is you sure?" %></td>
<% end %></tr>
<% end %></table>